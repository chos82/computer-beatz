<h1>Editing user</h1>
<h3><%= @user.login %></h3>

<% form_for(@user, :url => admin_user_path) do |f| %>
<%= f.error_messages %>
<p>
	<%= f.collection_select :role_ids, @roles,
        					:id, :rolename, {},{:multiple => true} %>
</p>
<p>
    <%= f.submit "Update" %>
</p>
<% end %>

<%= link_to 'Show', admin_user_path(@user) %> |
<%= link_to 'Back', admin_users_path %>
