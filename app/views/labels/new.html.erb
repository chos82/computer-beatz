<div class="margin-left">
<h3>New label 
<%= 'for <em>' + h(@track.name) + '</em>' if @track %>
<%= 'for <em>' + h(@album.name) + '</em>' if @album %>
</h3>

<%= error_messages_for 'label', :header_message => "The form could not be submitted.",
								 :message => "Please check the following details:",
								 :header_tag => 'h3' %>

<% form_for( @label, :url => {:action => 'check_new',
							  :track_id => params[:track_id],
							  :album_id => params[:album_id]} )do |f| %>

  <p>
    <%= f.label :name %><br />
    <%= text_field_with_auto_complete :label, :name, {:autocomplete => 'off'}, {:method => :get, :skip_style => true} %><br/>
  </p>
  <p>
    <%= f.label :www,  "Homepage" %><br />
    <%= f.text_field :www %>
  </p>
  <p>
  	Publications are...<br />
  	<%= f.radio_button :license, "free" %><%= f.label :license, "free" %>
	<%= f.radio_button :license, "commercial" %><%= f.label :license, "commercial" %>
	<%= f.radio_button :license, "unknown", :checked => true %><%= f.label :license, "unknown" %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', labels_path %>
</div>