<%= render :partial => 'project' %>

<div class="releases">
<h4>Releases</h4>
<div>
	<% link_to project_player_url(@project), {:class => 'playable playButton projectPlay'} do %>
		<div>Play all!</div>
	<% end %>
	<div style="display:none;"><%=@project.id%></div>
</div>
<table>
<%= render :partial => 'release', :collection => @published %>		
</table>
</div>

<%= render :partial => 'comment', :object => @comments, :locals => {:project => @project} %>

<% if logged_in? -%>
<%= will_paginate @comments, :inner_window => 1, :outer_window => 1 %>
<%= render :partial => 'add_comment', :object => @project %>
<% end -%>

<div id="observer"></div>
