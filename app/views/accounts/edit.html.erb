<% form_tag url_for(:action => "update") do %>
	<p>
		<label for="old_password" class="block">Old Password</label><br />
		<%= password_field_tag 'old_password', @old_password %>
	</p>
	<p>
		<label for="password" class="block">New Password</label><br />
		<%= password_field_tag 'password', {} %><br />
		<small>Between 6 and 40 characters</small>
   </p>
	<p>
		<label for="password_confirmation"  class="block">Confirm new password</label><br />
		<%= password_field_tag 'password_confirmation' %>
	</p>
	<p>
		<%= submit_tag 'Change password' %>
	</p>
<% end %>
<p><%= link_to 'Back', edit_user_path(current_user) %></p>

